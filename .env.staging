# Staging Environment Configuration
# Copy this file and fill in your staging values

NODE_ENV=staging
PORT=3000
LOG_LEVEL=debug

# Database Configuration
DB_HOST=staging-db-host
DB_PORT=5432
DB_NAME=calendar_ms_staging
DB_USER=calendar_user_staging
DB_PASSWORD=your-staging-db-password

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-key
JWT_EXPIRES_IN=24h

# Google Calendar API
GOOGLE_CALENDAR_API_KEY=your-google-calendar-api-key-staging
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-staging-project","private_key_id":"..."}

# Optional: Redis for caching
REDIS_URL=redis://staging-redis-host:6379
REDIS_PASSWORD=your-staging-redis-password

# Optional: Monitoring and Logging (staging can use same as prod or separate)
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-staging-new-relic-license-key

# Health Check Configuration
HEALTH_CHECK_INTERVAL=15000
HEALTH_CHECK_TIMEOUT=3000
