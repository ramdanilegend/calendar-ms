{
  "name": "calendar-ms",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node server.ts",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "ts-node scripts/migrate.ts up",
    "migrate:down": "ts-node scripts/migrate.ts down",
    "migrate:fresh": "ts-node scripts/migrate.ts fresh",
    "fetch-calendar": "ts-node scripts/fetchCalendar.ts",
    "update-mappings": "ts-node scripts/updateMappings.ts",
    "schedule:status": "ts-node -e \"import { SchedulerService } from './src/services/scheduler'; const s = new SchedulerService(); s.initialize().then(() => console.log(s.getJobStatus())); s.shutdown();\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Calendar Microservice API that fetches data from Google Calendar and serves localized event data with support for Gregorian, Hijri, and Indonesian calendars",
  "dependencies": {
    "@googleapis/calendar": "^11.0.1",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.5",
    "@types/sequelize": "^4.28.20",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "google-auth-library": "^10.2.1",
    "googleapis": "^156.0.0",
    "hijri-js": "^1.0.25",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
